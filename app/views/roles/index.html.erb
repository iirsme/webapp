<div class="">
  <h3 class="screen-header">Roles de Seguridad</h3>
  <p class="spacer-30"></p>

  <div class="col-md-12 col-md-offset-0">
    <div class="panel panel-default panel-table">
      <div class="panel-header">
        <div class="row">
          <div class="col col-xs-6">
            <h3 class="panel-title"></h3>
          </div>
          <div class="col col-xs-6 text-right">
            <%= link_to "Nuevo", new_role_path, class: "btn btn-sm btn-primary btn-create" %>
                
          </div>
        </div>
      </div>
      
      <div class="panel-body">
        <table class="table table-striped table-bordered table-list">
          <thead>
            <tr>
              <th class="col col-xs-2 col-header">Nombre</th>
              <th class="col col-xs-3 col-header">Descripción</th>
              <th class="col col-xs-1 col-header">Crear</th>
              <th class="col col-xs-1 col-header">Ver</th>
              <th class="col col-xs-1 col-header">Editar</th>
              <th class="col col-xs-1 col-header">Eliminar</th>
              <th class="col col-xs-2 col-header"></th>
            </tr> 
          </thead>
          <% @roles.each do |role| %>
            <tbody>
              <td class="col col-xs-2 col-data-left"> <%= role.name %> </td>
              <td class="col col-xs-3 col-data-left"> <%= role.description %> </td>
              <td class="col col-xs-1 col-data-center"><i class='glyphicon glyphicon-<%= (role.can_create ? 'ok txt-green' : 'remove txt-red') %>'></i></td>
              <td class="col col-xs-1 col-data-center"><i class='glyphicon glyphicon-<%= (role.can_read ? 'ok txt-green' : 'remove txt-red') %>'></i></td>
              <td class="col col-xs-1 col-data-center"><i class='glyphicon glyphicon-<%= (role.can_update ? 'ok txt-green' : 'remove txt-red') %>'></i></td>
              <td class="col col-xs-1 col-data-center"><i class='glyphicon glyphicon-<%= (role.can_delete ? 'ok txt-green' : 'remove txt-red') %>'></i></td>
              <td align="center">
                <%= link_to edit_role_path(role), class: "btn btn-default btn-action" do %> <em class="glyphicon glyphicon-pencil"></em> <% end %>
                <%= link_to role_path(role), data: {confirm: "¿Esta seguro que quiere eliminar este Rol?"},
                                             class: "btn btn-default btn-action",
                                             method: :delete do %> <em class="glyphicon glyphicon-trash"></em> <% end %>
              </td>
            </tbody>
          <% end %>
        </table>
      </div>

      <div class="panel-footer">
        <div class="row">
          <% if false %>
            <div class="col col-xs-4">Page 1 of 5
            </div>
            <div class="col col-xs-8">
              <ul class="pagination hidden-xs pull-right">
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
              </ul>
              <ul class="pagination visible-xs pull-right">
                <li><a href="#">«</a></li>
                <li><a href="#">»</a></li>
              </ul>
            </div>
         <% end %>
       </div>
     </div> 
     
    </div>
  </div>
</div>