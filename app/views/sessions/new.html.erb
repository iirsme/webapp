<div class="wrapper fadeInDown">
  <div id="formContent">
    <div class="fadeIn first login-logo">
    </div>
    <%= form_for(:session, :html => {class: "no-class", role: "form"}, url: login_path) do |f| %>
      <%= f.email_field :email, class: 'fadeIn second', placeholder: "Email", required: true, oninput: "this.setCustomValidity('')", oninvalid: "this.setCustomValidity('Ingrese un email válido')" %>
      <%= f.password_field :password, class: 'fadeIn third', placeholder: "Contraseña", required: true, oninput: "this.setCustomValidity('')", oninvalid: "this.setCustomValidity('Ingrese su contraseña')" %>
      <%= f.submit "Ingresar", class: "fadeIn fourth login-button" %>
    <% end %>
    <div id="formFooter">
      <a class="underlineHover" href="#"></a>
    </div>
  </div>
</div>