<div class="">
  <h3 class="screen-header">Variables usadas en el Sistema</h3>
  <p class="spacer-30"></p>

  <div class="col-md-12 col-md-offset-0">
    <div class="panel panel-default panel-table">
      <div class="panel-header">
        <div class="row">
          <div class="col col-xs-6">
            <h3 class="panel-title"></h3>
          </div>
          <div class="col col-xs-6 text-right">
            <%= link_to "Nuevo", new_field_path, class: "btn btn-sm btn-primary btn-create" %>
          </div>
        </div>
      </div>
      
      <div class="panel-body">
        <table class="table table-striped table-bordered table-list fields-table">
          <thead>
            <tr>
              <th class="col col-xs-3 col-header">Etiqueta</th>
              <th class="col col-xs-4 col-header">Nombre</th>
              <th class="col col-xs-2 col-header">Tipo</th>
              <th class="col col-xs-3 col-header"></th>
            </tr>
          </thead>
          <tbody>
            <% @fields.each do |field| %>
              <tr>
                <td class="col col-xs-3 col-data-left"> <%= field.full_label %> </td>
                <td class="col col-xs-4 col-data-left"> <%= field.name %> </td>
                <td class="col col-xs-2 col-data-left"> <%= field.field_type_name %> </td>
                <td align="center">
                  <%= link_to edit_field_path(field), class: "btn btn-default btn-action" do %> <em class="glyphicon glyphicon-pencil"></em> <% end %>
                  <%= link_to field_path(field), data: {confirm: "¿Esta seguro que quiere eliminar esta Variable?"},
                                               class: "btn btn-default btn-action",
                                               method: :delete do %> <em class="glyphicon glyphicon-trash"></em> <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="panel-footer">
        <div class="row">
          <% if false %>
            <div class="col col-xs-4">Page 1 of 5
            </div>
            <div class="col col-xs-8">
              <ul class="pagination hidden-xs pull-right">
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
              </ul>
              <ul class="pagination visible-xs pull-right">
                <li><a href="#">«</a></li>
                <li><a href="#">»</a></li>
              </ul>
            </div>
         <% end %>
       </div>
     </div> 
     
    </div>
  </div>
</div>