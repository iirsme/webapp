<%= render 'shared/errors', obj: @research %>

<div class="row">
  <div class="wizard">
    <div class="wizard-inner">
      <div class="connecting-line"></div>
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active">
            <a href="#step1" data-toggle="tab" aria-controls="step1" role="tab" title="Datos Generales">
              <span class="round-tab">
                <i class="fa fa-book"></i>
              </span>
            </a>
          </li>
          <li role="presentation" class="disabled">
            <a href="#step2" data-toggle="tab" aria-controls="step2" role="tab" title="Configuración de Campos">
              <span class="round-tab">
                <i class="fa fa-wpforms"></i>
              </span>
            </a>
          </li>
          <li role="presentation" class="disabled">
            <a href="#step3" data-toggle="tab" aria-controls="step3" role="tab" title="Usuarios con Acceso">
              <span class="round-tab">
                <i class="fa fa-user"></i>
              </span>
            </a>
          </li>
          <li role="presentation" class="disabled">
            <a href="#complete" data-toggle="tab" aria-controls="complete" role="tab" title="Finalizar">
              <span class="round-tab">
                <i class="fa fa-check"></i>
              </span>
            </a>
          </li>
        </ul>
      </div>

      <div class="tab-content">
        <div class="tab-pane active" role="tabpanel" id="step1">

		  <div class="col-xs-10 col-xs-offset-0">
		     <%= form_for(@research, :html => { class: "form-horizontal", role: "form", id: "basic-data-form" }) do |el| %>
		        <div class="form-group">
		          <label class="col-xs-3 control-label" for="name">No.</label>
		          <div class="col-xs-1">
		          	<%= el.text_field :seq_no, value: (@research.get_seqno unless @research.get_seqno == 0), class: "form-control form-style", disabled: true %>
		          </div>
		        </div>
		     
		     	<div class="form-group">
		          <label class="col-xs-3 control-label" for="name">Privado</label>
		          <div class="col-xs-9 material-switch pull-right label-padding">
		            <%= el.check_box :is_private, id: :is_private, class: 'form-control form-style research-is-private-field' %>
		            <label for="is_private" class="label-primary"></label>
		          </div>
				</div>
		
		        <div class="form-group">
		       	  <label class="col-xs-3 control-label" for="name">Contraseña</label>
		          <div class="col-xs-3">
		            <%= el.password_field :password, class: 'form-control form-style research-password-field',
		                                             placeholder: "#{(!@research.new_record? && @research.is_private?) ? '**********' : ''}" %>
		          </div>
		        </div>

		        <div class="form-group">
		          <label class="col-xs-3 control-label" for="name">Código</label>
		          <div class="col-xs-3">
		            <%= el.text_field :code, class: "form-control form-style research-code-field", autofocus: true, onfocus: 'researchFormLogic();' %>
		          </div>
		        </div>

                <div class="form-group">
                  <label class="col-xs-3 control-label" for="name">Propietario</label>
                  <div class="col-xs-3">
                    <%= el.collection_select(:owner_id, User.all_users, :id, "#{:full_name}", { include_blank: true }, {class: 'form-control form-style'} ) %> 
                  </div>
                </div>
			    <div class="form-group">
		          <label class="col-xs-3 control-label" for="name">No. de registro de Investigación y Etica</label>
			  	  <div class="col-xs-5">
			        <%= el.text_field :registration_code, class: 'form-control form-style' %>
			      </div>
			    </div>

			    <div class="form-group">
		          <label class="col-xs-3 control-label" for="name">Nombre</label>
			  	  <div class="col-xs-8">
			        <%= el.text_field :name, class: 'form-control form-style' %>
			      </div>
			    </div>

		        <div class="form-group">
		          <label class="col-xs-3 control-label" for="description">Descripción</label>
		          <div class="col-xs-8">
		            <%= el.text_area :description, rows: 5, class: "form-control form-style" %>
		          </div>
		        </div>

		        <div class="form-group">
		          <div class="col-xs-offset-12 col-xs-4">
		          	 <%= link_to "Atras", go_back_research_path(research: @research, go_home: @research.new_record?), class: "btn btn-primary btn-form" %>
		          	 <%= el.submit "Siguiente", class: "btn btn-primary btn-form" %>
		          </div>
		        </div>
		     <% end %>
		    </div>

        </div>
