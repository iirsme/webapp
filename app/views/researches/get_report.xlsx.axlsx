wb = xlsx_package.workbook

wb.styles do |style|
  wb.add_worksheet(name: "Reporte Horizontal") do |sheet|
    header = style.add_style(b: true, sz: 13)

    # HEAD ROW
    sheet.add_row %w(curp name), style: header

    # CONTENT ROWS
    @records.each do |r|
      byebug
      sheet.add_row [r['curp'], r['name']]
    end
  end
end