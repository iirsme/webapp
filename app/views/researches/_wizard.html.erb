<%= render 'shared/errors', obj: @research %>

<div class="row">
  <div class="wizard">
    <div class="wizard-inner">
      <div class="connecting-line"></div>
        <ul class="nav nav-tabs" role="tablist">
          	<li role="presentation" class="<%= active_research_tab?(@research, @current_step, 1) %>">
              <a href="#step1" data-toggle="tab" aria-controls="step1" role="tab" title="Datos Generales">
              <span class="round-tab">
                <i class="fa fa-book"></i>
              </span>
            </a>
          </li>
          <li role="presentation" class="  <%= active_research_tab?(@research, @current_step, 2) %>">
            <a href="#step2" data-toggle="tab" aria-controls="step2" role="tab" title="Configuración de Solapas y Campos">
              <span class="round-tab">
                <i class="fa fa-wpforms"></i>
              </span>
            </a>
          </li>
          <li role="presentation" class="<%= active_research_tab?(@research, @current_step, 3) %>">
            <a href="#step3" data-toggle="tab" aria-controls="step3" role="tab" title="Usuarios con Acceso">
              <span class="round-tab">
                <i class="fa fa-user"></i>
              </span>
            </a>
          </li>
          <li role="presentation" class="<%= active_research_tab?(@research, @current_step, 4) %>">
            <a href="#step4" data-toggle="tab" aria-controls="step4" role="tab" title="Finalizar">
              <span class="round-tab">
                <i class="fa fa-check"></i>
              </span>
            </a>
          </li>
        </ul>
      </div>

      <%= hidden_field_tag "is-new-research", @research.new_record? %>

      <div class="tab-content">
        <div role="tabpanel" id="step1" class="tab-pane <%= active_research_tab?(@research, @current_step, 1) %>">
          <%= render 'form', obj: @research %>
        </div>

        <div role="tabpanel" id="step2" class="tab-pane <%= active_research_tab?(@research, @current_step, 2) %>">
          <h1>PASO 2</h1>
        </div>

        <div role="tabpanel" id="step3" class="tab-pane <%= active_research_tab?(@research, @current_step, 3) %>">
          <%= render 'research_users/form', obj: @research %>
        </div>

        <div role="tabpanel" id="step4" class="tab-pane <%= active_research_tab?(@research, @current_step, 4) %>">
          <h1>PASO 4</h1>
        </div>

