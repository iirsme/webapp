<%= render 'shared/errors', obj: @research %>

<div class="spacer-30"></div>
<div class="container col-xs-12">
<div class="row">
	
  <div class="col-xs-6 col-md-6">
    <div class="row setup-content">
      <div class="col-xs-12 col-md-12">
        <div class="col-xs-12 col-md-12 panel panel-default" id="step">
          <div class="spacer-10"></div>
          <h4 class="text-left"> Datos Generales </h4>
          <div class="spacer-20"></div>
          <div class="container col-xs-12">
            <div class="row clearfix">
              <%= render 'researches/form', obj: @current_research, read_only: true %>
		    </div>
	      </div>
        </div>
      </div>
    </div>
  </div>
	
  <div class="col-xs-6 col-xs-offset-0 col-md-6 col-md-offset-0">
    <div class="row setup-content">
      <div class="col-xs-12 col-md-12">
        <div class="col-xs-12 col-md-12 panel panel-default" id="step">
          <div class="spacer-10"></div>
          <h4 class="text-left"> Ultimos pacientes agregados </h4>
          <div class="spacer-20"></div>
          <div class="container col-xs-12">
            <div class="row clearfix">
              <div class="col-md-12 column">
<!--
              <div id="research-users">
                <%#= render 'research_users/users' %> TODO: Replace for last patients partial
              </div>
-->
			    <table class="table table-bordered table-hover">
  			      <thead>
	  		        <tr style="width:100%">
			          <th class="text-center" style="width:30%"> CURP </th>
			          <th class="text-center" style="width:45%"> Nombre </th>
			          <th class="text-center" style="width:10%"> Telefono </th>
			          <th class="text-center" style="width:10%"> Celular </th>
				      <th class="text-center" style="width:5%"> </th>
			        </tr>
				  </thead>
			      <tbody>
			      </tbody>
			    </table>

  			  </div>
		    </div>
	      </div>
        </div>
      </div>
    </div>
    
    <div class="spacer-10"></div>
    <div class="row setup-content">
    <div class="col-xs-12 col-md-12">
      <div class="col-xs-12 col-md-12 panel panel-default" id="step">
      	<div class="spacer-10"></div>
      	<h4 class="text-left"> Pr√≥ximas visitas </h4>
        <div class="spacer-20"></div>
        <div class="container col-xs-12">
          <div class="row clearfix">
            <div class="col-md-12 column">
<!--
              <div id="research-users">
                <%#= render 'research_users/users' %> TODO: Replace next visits partial
              </div>
-->
			  <table class="table table-bordered table-hover">
			    <thead>
			      <tr style="width:100%">
			        <th class="text-center" style="width:30%"> CURP </th>
			        <th class="text-center" style="width:25%"> Status </th>
			        <th class="text-center" style="width:20%"> Fecha </th>
			        <th class="text-center" style="width:20%"> Hora </th>
				    <th class="text-center" style="width:5%"> </th>
			      </tr>
				</thead>
			    <tbody>
			    </tbody>
			  </table>
			  
			</div>
		    </div>
	      </div>
        </div>
      </div>
    </div>
  </div>
  
</div>

<% if @current_research.owner?(@current_research, current_user) || is_super_admin? %>
<div class="row">
  <div class="col-xs-6 col-md-6">
    <div class="row setup-content">
      <div class="col-xs-12 col-md-12">
        <div class="col-xs-12 col-md-12 panel panel-default" id="step">
          <div class="spacer-10"></div>
          <h4 class="text-left"> Reporte de Protocolo</h4>
          <div class="spacer-20"></div>
          <div class="container col-xs-12">
            <%= form_tag get_report_path(format: "xlsx"), method: :get, class: "form-horizontal" do %>
              <%= hidden_field_tag "id", @current_research.id %>
              <%= hidden_field_tag :format, :xlsx %>
              <div class="row">
                <div class="col-xs-8">
                  <label>Visitas a imprimir</label> (Ejemplo: 1,2,3)
                  <%= text_field_tag("appts_no", nil, class: "form-control form-style input-md validable",
                                     oninput: "this.setCustomValidity('')",
                                     oninvalid: "this.setCustomValidity('Valor incorrecto. Favor de introducir numeros separados por \",\"')",
                                     :onchange => "validate_report_field(this);") %> 
                </div>
                <div class="col-xs-4">
                  <div class="spacer-5"></div>
                  <div class="spacer-20"></div>
                  <%= button_tag(type: :submit, class: "btn btn-md btn-primary") do %>
                    <i class="fa fa-print"></i> Imprimir
                  <% end %>
                </div>
              </div>
		    <% end %>
		  <div class="spacer-20"></div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

</div>


