  <table class="table table-bordered table-hover">
    <thead>
      <tr style="width:100%">
        <th class="text-center" style="width:20%"> Usuario </th>
        <th class="text-center" style="width:30%"> Nombre </th>
	    <th class="text-center" style="width:25%"> Rol </th>
	    <th class="text-center" style="width:15%"> Propietario </th>
	    <th class="text-center" style="width:10%"> </th>
      </tr>
	</thead>
    <tbody>

      <% if !@users.nil? %>
        <% @users.each do |ru| %>
          <tr>
      	    <td><%= ru.user.username %></td>
      	    <td><%= "#{ru.user.full_name}" %></td>
      	    <td class="col-data-center"><%= ru.role.name %></td>
      	    <td class="col-data-center"><i class='glyphicon glyphicon-<%= (ru.is_owner ? 'ok txt-green' : 'remove txt-red') %>'></i></td>
      	    <td align="center">
              <% if !ru.is_owner %>
                <%= link_to delete_research_user_path(record: ru, research_id: ru.research.id), 
                                                           data: {confirm: "Â¿Esta seguro que quiere eliminar este Usuario de este Protocolo?"},
                                                           class: "btn btn-default btn-action",
                                                           remote: true do %> <em class="glyphicon glyphicon-trash"></em> <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>

	</tbody>
  </table>