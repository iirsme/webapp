<% if logged_in? %>
<div class="container">
    <div class="row">
	    <div class="col-xs-11 col-xs-offset-0">
		    <% flash.each do |name, msg| %>
	    	    <div class='alert alert-<%= "#{name}" %> notification'>
	    		    <a href="#" class="close" data-dismiss="alert">&#215;</a>
	    		    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
			    </div>
		    <% end %>
	    </div>
    </div>
</div>
<% end %>
