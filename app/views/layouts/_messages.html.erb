<% if logged_in? %>
<div class="container">
    <div class="row">
	    <div class="col-xs-offset-1 col-xs-9">
		    <% flash.each do |name, msg| %>
	    	    <div class='alert alert-<%= "#{name}" %> notification'>
	    		    <a href="#" class="close" data-dismiss="alert">&#215;</a>
                    <% if msg.is_a?(String) %>
	    		       <div class="notification-content"><span class='notification-icon fa fa-<%= (name == "success" ? "check-circle" : "exclamation-circle") %>'></span> <%= msg %> </div>
	    		    <% end %>
			    </div>
		    <% end %>
	    </div>
    </div>
</div>
<% end %>
