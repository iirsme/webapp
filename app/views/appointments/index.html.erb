<div class="">
  <h3 class="screen-header">Visitas del Protocolo</h3>
  <p class="spacer-30"></p>

  <div class="col-md-12 col-md-offset-0">
    <div class="panel panel-default panel-table">
      <div class="panel-header">
        <div class="row">
          <div class="col col-xs-6">
            <h3 class="panel-title"></h3>
          </div>
          <div class="col col-xs-6 text-right">
            <%= link_to "Nuevo", new_appointment_path(research_id: @current_research, comesFrom: "appointments"), class: "btn btn-sm btn-primary btn-create" %>
          </div>
        </div>
      </div>
      
      <div class="panel-body">
        <table class="table table-striped table-bordered table-list appointments-table">
          <thead>
            <tr>
              <th class="col col-xs-3 col-header">Paciente (CURP)</th>
              <th class="col col-xs-1 col-header">No.</th>
              <th class="col col-xs-2 col-header">Status</th>
              <th class="col col-xs-2 col-header">Fecha</th>
              <th class="col col-xs-2 col-header">Hora</th>
              <th class="col col-xs-2 col-header"></th>
            </tr>
          </thead>
          <tbody>
            <% @appointments.each do |appt| %>
              <tr>
              	<td class="col col-xs-3 col-data-left"> <%= appt.patient.candidate.curp %> </td>
                <td class="col col-xs-1 col-data-center"> <%= appt.appt_no.blank? ? "" : appt.appt_no.to_i %> </td>
                <td class="col col-xs-2 col-data-center"> <%= appt.status %> </td>
                <td class="col col-xs-2 col-data-center"> <%= appt.appt_date.strftime("%d/%m/%Y") %> </td>
                <td class="col col-xs-2 col-data-center"> <%= appt.appt_time.strftime("%I:%M %p") %> </td>
                <td align="center">
                  <%= link_to see_evaluation_path(id: appt, research_id: @current_research, comesFrom: "appointments"), class: "btn btn-default btn-action" do %> <em class="fa fa-clipboard"></em> <% end %>
                  <%= link_to edit_appointment_path(appt, research_id: @current_research, comesFrom: "appointments"), class: "btn btn-default btn-action" do %> <em class="glyphicon glyphicon-pencil"></em> <% end %>
                  <%= link_to appointment_path(appt, research_id: @current_research), data: {confirm: "¿Esta seguro que quiere eliminar esta Visita?"},
                                           class: "btn btn-default btn-action",
                                           method: :delete do %> <em class="glyphicon glyphicon-trash"></em> <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="panel-footer">
        <div class="row">
          <% if false %>
            <div class="col col-xs-4">Page 1 of 5
            </div>
            <div class="col col-xs-8">
              <ul class="pagination hidden-xs pull-right">
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
              </ul>
              <ul class="pagination visible-xs pull-right">
                <li><a href="#">«</a></li>
                <li><a href="#">»</a></li>
              </ul>
            </div>
         <% end %>
       </div>
     </div> 
     
    </div>
  </div>
</div>